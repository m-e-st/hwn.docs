<style>
.markdown {
	margin-top:16px;
	color:var(--stone-800)!important
}
.markdown a {
	color:blue;
}
.markdown a:hover {
	font-weight: bold;
}

.date {
	float:right;
	margin: -28px -16px 0 0;
	padding: 8px 32px 8px;
	letter-spacing:4px;
	background: #ccc;
	width2:52%
}
.note {
	float:none;
	margin: -28px 0 0 -16px;
	padding: 8px 32px 8px;
	letter-spacing:4px;
	background: #ffeb3b;
	width:100%
}

</style>

<header id="header" class="w3-hide">
	<nav class="w3-top w3-bar w3-indigo w3-padding w3-card w3-center w3-wide w3-opacity-min">
		<a href="#lecciones" class="w3-bar-item w3-btn w3-left">Notas {{  page.fileSlug | dateTitle }}</a>
		<a href="#lecciones" class="w3-right w3-bar-item w3-btn">Lecciones</a>
	</nav>
	<div class="w3-padding-32"></div>
<!--
	<div class="w3-container w3-panel w3-light-gray w3-padding-top-32">
		<h6 class="w3-right">{{  page.fileSlug | dateTitle }}</h6>
	</div>
-->
</header>

<main class="">
	<section class="w3-container markdown">
	{{ content | safe }}
	</section>
</main>

<script>
	document.addEventListener("DOMContentLoaded", function(){
		const queryString = window.location.search;
		if (! queryString.includes("preview") )
			document.getElementById("header").className = "";
		});
</script>
