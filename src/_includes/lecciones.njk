
<!--	----------------------------------------------------------------
  --	lecciones.njk - Nunjucks include - Overview over weekly lessons
  --	----------------------------------------------------------------
  -->

<details id="leccionesTotal" {%- if site.env -%}{%- else -%}open{%- endif -%}>
	<summary class="w3-display-container" >
		{%- if site.env -%}{%- else -%}
		<button class="w3-display-left w3-btn" 
				onclick="setDetailsDisplay(document.getElementById('leccionesParent'), false);"
				title="colapsar">
				{% lucide "chevron-up", { "stroke":"white"}  %}
		</button>
		{%- endif -%}
		<a class="w3-display-right w3-btn" href="#indice" title="Índice">{% lucide "table-of-contents", { "stroke":"white"}  %}</a>
		<h1 class="w3-center w3-blue-gray" 
			onclick="document.getElementByID('leccionesTotal').open=! document.getElementByID('leccionesTotal').open">
			Lecciones de las semanas
		</h1>
	</summary>

	<article id="leccionesParent" class="w3-section">
	{% if site.env %}
		<div class="w3-section w3-panel w3-pale-yellow w3-leftbar w3-rightbar w3-border-yellow w3-display-container">
			<div class="w3-display-left w3-margin-left">{% lucide "construction", {"size":"48","stroke":"#ffeb3b"}  %}</div>
			<p class="w3-padding w3-panel w3-text-blue-gray w3-center w3-wide" style="font-size:24px;font-weight:bolder">
				Este contenido aún no está disponible.
			</p>
			<div class="w3-display-right w3-margin-right">{% lucide "construction", {"size":"48","stroke":"#ffeb3b"}  %}</div>
		</div>
	{% else %}
		{% for leccion in lecciones.notas %}
		<details id="{{ leccion.date }}" >
			<summary class="w3-padding-small w3-center w3-light-gray w3-hover-gray">
				<a href="lecciones/notas_{{ leccion.date }}.html?title={{ leccion.caption }}"
				   class="w3-right w3-hover-shadow"
				   style="margin-top:12px"
				   title="Pantalla completa.">
					{% lucide "external-link" %}
				</a>
				<h4>{{ leccion.caption }}</h4>
			</summary>
			<iframe class="w3-block w3-border-0"
					src = "lecciones/notas_{{ leccion.date }}.html"
					sandbox="" scrolling="auto"></iframe>
		</details>
		{% endfor %}
	</article>
	{% endif %}
	
</details>


