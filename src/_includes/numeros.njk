				{{ item(40, "cuarenta") }}
				{{ item(50, "cincuenta") }}
				{{ item(60, "sesenta") }}
				{{ item(70, "setenta") }}
				{{ item(80, "ochenta") }}
				{{ item(90, "noventa") }}
				{{ item(100, "cien") }}
			</ul>
		</details>
	</article>
	<article class = "w3-col m6 l4">
		<details>
			<summary class="{{ classList }}">Otros ejemplos</summary>
			<ul>
				{{ item(30, "treinta") }}
