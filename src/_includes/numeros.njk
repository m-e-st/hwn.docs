
<!--	----------------------------------------------------------------
  --	numeros.njk - Nunjucks include - Spanish numbers
  --	----------------------------------------------------------------
  -->

{% macro item (number, text='', icon=true) %}
<li>{{number}}
	<span
	{% if icon %}
		style="cursor:pointer";
		onclick="number_{{number}}.play(); false;">	{% lucide "play", {size:12} %}
	{% else %}
		> {% lucide "minus", {size:12} %}
	{% endif %}
	</span>
	{{text}}
</li>
{% endmacro %}

{% set classList = "w3-dark-gray w3-border-left w3-border-right w3-center w3-padding-small" %}

<style>
details>ul { list-style:none;margin-bottom:24px }

details>ul>li>span {
	padding: 0;
	margin: 0;
}
</style>


<h1 class="w3-center w3-indigo">Los números español</h1>

<div class="w3-row w3-wide">
	<article class = "w3-col m6 l3 ">
		<details open>
			<summary class="{{ classList }}">0 &hellip; 9</summary>
			<ul>
				{{ item(0, "cero") }}
				{{ item(1, "uno") }}
				{{ item(2, "dos") }}
				{{ item(3, "tres") }}
				{{ item(4, "cuatro") }}
				{{ item(5, "cinco") }}
