		</details>
	</article>
	<article class = "w3-col m6 l3">
		<details>
			<summary class="{{ classList }}">10 &hellip; 19</summary>
			<ul>
				{{ item(10, "diez") }}
				{{ item(11, "once") }}
				{{ item(12, "doce") }}
				{{ item(13, "trece") }}
				{{ item(14, "catorce") }}
				{{ item(15, "quince") }}
