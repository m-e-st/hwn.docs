{% macro item (number, text='', icon=true) %}
<li><b>{{number}}</b>
	<span
	{%- if icon %}
		onclick="number_{{number}}.play(); false;"
		style="cursor:progress";
		> {% lucide "play", {size:12} %}
	{% else %}
		style="cursor:none";
		> {% lucide "minus", {size:12} %}
	{% endif -%}
	</span>
	{{text}}
</li>
{% endmacro %}

{% set classList = "w3-teal w3-border-left w3-border-right w3-center w3-padding-small" %}

<style>
details>ul { list-style:none;margin-bottom:24px }

details>ul>li>span {
	padding: 0;
	margin: 0;
}
</style>

<script>
let stateNumeroDisplay = false;
