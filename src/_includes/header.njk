<header class="">
	<nav class="flex items-center justify-between flex-wrap p-2">
	  <div class="flex items-center flex-shrink-0 mr-6">
		<a href="/"><img class="pagelogo" width="54" height="54" src="/static/pagelogo.svg" alt="Logo" /></a>
		<a href="/" class="font-semibold text-xl tracking-tight">{{ site.title }}</a>
	  </div>
	  <div class="w-full block flex-grow sm:flex sm:items-center sm:w-auto">
		<div class="text-sm sm:flex-grow">
		  {%- for item in menu -%}
			{%- if not item.footer -%}
			<a href="{{ item.href }}" class="block sm:inline-block mt-4 sm:mt-0 mr-4">{{ item.text }}</a>
			{%- endif -%}
		  {%- endfor -%}
		</div>
