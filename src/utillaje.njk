---
layout: base.njk
permalink: "{{ page.filePathStem }}.html"
description: "Startseite"

apps:
 - caption: Mondly
   type: mobile-app
   img: logo.mondly.svg
   url: https://www.mondly.com
 - caption: duolingo
   type: mobile-app
   img: logo.duolingo.svg
   url: https://www.duolingo.com/
 - caption: Memrise
   type: mobile-app
   img: logo.memrise.svg
   url: https://www.memrise.com
 - caption: "Babbel"
   type: mobile-app
   img: logo.babbel.svg
   url: https://www.babbel.com/
 - caption: "Grammar"
   type: ebook
 - caption: "Spanish blog"
   type: blog
 - caption: Word Reference
   type: dictionary
   url: https://www.wordreference.com/esde
 
---

{% macro image (name) %}
"{{site.imagedir}}/{{name}}"
{% endmacro %}


<!-- Navigation (Sits on top) -->
<header id="header">
	<nav class="w3-top w3-bar w3-pale-yellow w3-border-pale-red w3-topbar w3-bottombar w3-paddingx w3-card w3-center w3-wide w3-opacity-min">
		<a href="/" class="w3-bar-item w3-btn w3-left">Utillaje</a>
		<a href="/" class="w3-right w3-bar-item w3-btn">Inicio</a>
	</nav>
	<div class="w3-padding-32"></div>
</header>

<main class="w3-container">
	<section class="w3-row-padding">
		{% for app in apps %}
		<article class="w3-mobile w3-col l3 m6 ">
			<div class="w3-panel w3-border w3-card" style="margin:16px;height:200px;line-height:68px">
				<img src={{ image('type.'+app.type+'.svg') }} class="w3-right w3-margin-top" style="height:36px;">
				<img src={{ image(app.img) }} class="w3-left w3-margin-top" style="max-height:46px;max-width:120px">
				&nbsp;
				<h2 class="w3-topbar">{{ app.caption }}</h2>
			</div>
		</article>
		{% endfor %}
			<img src="static/pagelogo.svg">
	</section>
</main>


