---

{% macro image (name, type="type", ext="svg") %}
"{{site.imagedir}}/{{type}}.{{name}}.{{ext}}"
{% endmacro %}


<!-- Navigation (Sits on top) -->
<header id="header">
	<nav class="w3-top w3-bar w3-pale-yellow w3-border-pale-red w3-topbar w3-bottombar w3-paddingx w3-card w3-center w3-wide w3-opacity-min">
		<a href="/" class="w3-bar-item w3-btn w3-left">Utillaje</a>
		<a href="/" class="w3-right w3-bar-item w3-btn">Inicio</a>
	</nav>
	<div class="w3-padding-32"></div>
</header>

<main class="w3-container">
	<section class="w3-row-padding">
		{% for app in apps %}
		<article class="w3-mobile w3-col l4 m6 ">
			<div class="w3-panel w3-border w3-card" style="margin:16px;height:200px;line-height:60px">
				<img src={{ image(app.logo, 'logo') }} class="w3-right w3-margin-top" style="max-height:48px">
				<h2 class="w3-bottombar">{{ app.caption }}</h2>
			</div>
				<img src={{ image(app.type, 'type') }} class="w3-right w3-margin-top" style="height:36px;">
		</article>
		{% endfor %}
			<img src="static/pagelogo.svg">
	</section>
</main>


